#include <iostream>
#include <chrono>
using namespace std;
using namespace chrono;

/* ===============================
   ALGORITMA ITERATIF
   =============================== */
int totalIteratif(int arr[], int n) {
    int total = 0;
    for (int i = 0; i < n; i++) {
        total += arr[i];
    }
    return total;
}

/* ===============================
   ALGORITMA REKURSIF
   =============================== */
int totalRekursif(int arr[], int n) {
    if (n == 0) {
        return 0; // basis
    }
    return arr[n - 1] + totalRekursif(arr, n - 1);
}

/* ===============================
   PROGRAM UTAMA (APLIKASI)
   =============================== */
int main() {
    int n;
    cout << "=== APLIKASI PENGOLAHAN NILAI MAHASISWA ===\n";
    cout << "Masukkan jumlah mahasiswa: ";
    cin >> n;

    int* nilai = new int[n];

    // Generate data nilai otomatis
    for (int i = 0; i < n; i++) {
        nilai[i] = i % 100 + 1; // nilai 1 - 100
    }

    cout << "\nPilih metode algoritma:\n";
    cout << "1. Iteratif\n";
    cout << "2. Rekursif\n";
    cout << "Pilihan: ";

    int pilihan;
    cin >> pilihan;

    int total;
    auto start = high_resolution_clock::now();

    if (pilihan == 1) {
        total = totalIteratif(nilai, n);
        cout << "\nMetode: ITERATIF\n";
    } else {
        total = totalRekursif(nilai, n);
        cout << "\nMetode: REKURSIF\n";
    }

    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);

    cout << "Total nilai        : " << total << endl;
    cout << "Running time       : " << duration.count() << " microseconds\n";

    delete[] nilai;
    return 0;
}
